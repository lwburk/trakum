{
  "name": "Trakum",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Track changes to websites",
  "homepage_url": "http://github.com/wayneburkett/trakum",
  "icons": {
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/util/MessageRouter.js",
      "src/background/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Trakum"
  },
  "permissions": [
    "<all_urls>", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "src/content_scripts/inject.css"
      ],
      "js": [
        "src/lib/md5.min.js",
        "src/util/MessageRouter.js",
        "src/util/MatchPattern.js",
        "src/content_scripts/markasread.user.js"
      ]
    }
  ]
}
